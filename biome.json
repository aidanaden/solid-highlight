{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": []
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignore": ["node_modules", "build", "dev/dist", "dist", ".vercel", ".solid"]
  }
}
